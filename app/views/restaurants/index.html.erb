<h1> Restaurants</h1>
<div>
  <ol>
    <% @restaurants.each do |restaurant| %>
      <div>
        <li>
          <strong> <%= link_to restaurant.name, restaurant_path(restaurant) %> </strong>
            <p> Category: <%= restaurant.category.capitalize %> </p>
        </li>
      </div>
    <% end %>
  </ol>
</div>

<div>
<%= link_to "Add a new restaurant", new_restaurant_path %>
</div>
