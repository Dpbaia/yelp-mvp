<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category.capitalize %></h2>

<p>Our phone number: <%= @restaurant.phone_number %></p>
<p>Our address: <%= @restaurant.address %></p>

<ul class = "list-group">
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating%>: <%=  review.content%></li>
  <% end %>
</ul>
<p><%= link_to "Review this restaurant", new_restaurant_review_path(@restaurant) %></p>
<%= link_to "See all restaurants", restaurants_path %>
